<UserControl x:Class="KonfiguracjaDzwonekIILOKielce.BellTypeChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KonfiguracjaDzwonekIILOKielce"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}">
        <StackPanel Orientation="Horizontal">
            <RadioButton Margin="5,0,10,0" VerticalAlignment="Center" Content="{StaticResource StringForLesson}" IsChecked="{Binding IsForLesson}"/>
            <RadioButton Margin="5,0,10,0" VerticalAlignment="Center" Content="{StaticResource StringForBreak}" IsChecked="{Binding IsForBreak}"/>
        </StackPanel>
    </Grid>
</UserControl>
